<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include("../partials/head") %>
  <body>
    <!-- Header -->
    <%- include("../partials/header") %>
    <!-- Main -->
    <main class="padding-16">
      <h1>Registro</h1>
      <form method="POST">
        <div class="form-input">
          <label class="main-label" for="name">Nombre y Apellido</label>
          <input
            id="name"
            type="text"
            name="name"
            placeholder="Nombre y Apellido"
          />
        </div>
        <div class="form-input">
          <label class="main-label" for="user-name">Nombre de usuario</label>
          <input
            id="user-name"
            type="text"
            name="user-name"
            placeholder="Nombre de usuario"
          />
        </div>
        <div class="form-input">
          <label class="main-label" for="birthday">Fecha de nacimiento</label>
          <input id="birthday" type="date" name="birthday" />
        </div>
        <div class="form-input">
          <label class="main-label" for="address">Domicilio</label>
          <input
            id="address"
            type="text"
            name="address"
            placeholder="Domicilio"
          />
        </div>

        <div class="form-input">
          <label class="main-label" for="email">Correo electronico</label>
          <input id="email" type="email" name="email" placeholder="Domicilio" />
        </div>

        <div class="form-input">
          <label class="main-label" for="image">Foto de Perfil</label>
          <input
            id="image"
            type="file"
            name="image"
            placeholder="image"
            accept="image/png,image/jpg"
          />
        </div>
        <div class="form-input">
          <label class="main-label" for="password">Contrase単a</label>
          <input
            id="password"
            type="password"
            name="password"
            placeholder="contrase単a"
          />
        </div>
        <div class="form-input">
          <label class="main-label" for="re-password">Repetir contrase単a</label>
          <input
            id="re-password"
            type="password"
            name="re-password"
            placeholder="Repetir contrase単a"
          />
        </div>

        <button type="submit">Enviar</button>
        <button type="reset">Resetear</button>
      </form>
    </main>
    <!-- footer -->
    <%- include("../partials/footer") %>
  </body>
</html>
