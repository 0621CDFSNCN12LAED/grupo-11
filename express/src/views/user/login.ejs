<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
    <title>OLA</title>
  </head>
  <body>
    <!-- Header -->
    <%- include("../partials/header") %>
    <!-- Main -->
    <main class="padding-16">
      <h1>Ingresa a tu cuenta</h1>
      <form action="/user/login" method="POST">

        <div class="form-input">
          <label class="main-label" for="email">Correo electronico</label>
          <input id="email" type="email" name="email" />
        </div>

        <div class="form-input">
          <label class="main-label" for="userPassword">Contraseña</label>
          <input id="userPassword" type="password" name="userPassword" />
        </div>

        <p><a href="#">Olvide mi contraseña</a></p>

        <div class="form-input">
          <input id="recordame" type="checkbox" name="recordame" />
          <label class="main-label" for="recordame">Recordame</label>
        </div>

        <button type="submit">Enviar</button>
        <button type="reset">Resetear</button>
      </form>
    </main>
    <!-- footer -->
    <%- include("../partials/footer") %>
  </body>
</html>
